@model IEnumerable<MeetingForum.Models.Article>

@{
    ViewBag.Title = "Meeting Forum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    @Html.ActionLink("Добавить статью", "Create", "Home", new { area = "" }, new { @class = "navbar-brand" })
</p>

<table>
    <tr>
        <th>Название</th>
        <th>Картинка</th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="/Home/Details/@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
            </td>
            <td>
                @if (item.Image != null)
                {
                    @Html.Raw("<img style='max-width:400px; max-height:200px;' src=\"data:image/jpeg;base64,"
                         + Convert.ToBase64String(item.Image) + "\" />")
                }
                
            </td>
        </tr>
    }

</table>